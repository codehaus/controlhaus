<?xml version="1.0" ?>
<project name="wsmdrt" basedir=".." default="drt">
  <property environment="os"/>

  <property name="test.root" location="${basedir}/drt"/>
  <property name="web.inf" location="${basedir}/WEB-INF"/>
  <property name="tests.src" location="${test.root}/tests"/>
  <property name="build.dir" location="${test.root}/build"/>
  <property name="build.classes" location="${build.dir}/classes"/>
  <property name="build.gen" location="${build.dir}/gen"/>
  <property name="drt.logs" location="${test.root}/logs"/>
  <condition property="drt.os" value="windows">
    <os family="windows"/>
  </condition>
  <condition property="drt.os" value="unix">
    <os family="unix"/>
  </condition>
  <property name="lib.dir" value="${basedir}/lib"/>
  <property name="ext.lib.dir" value="${basedir}/external"/>

  <!-- =================================================================== -->
  <!-- Usage - print the usage -->
  <!-- ==================================================================== -->
  <target name="usage">
    <echo message=""/>
    <echo message=""/>
    <echo message="ServiceControl DRT Build file"/>
    <echo message="================================================================"/>
    <echo message="|                          Usage                               |"/>
    <echo message="================================================================"/>
    <echo message="----------------------------------------------------------------"/>
    <echo message="|                      Standard Targets                        |"/>
    <echo message="----------------------------------------------------------------"/>
    <echo message="clean                - Delete the junit classes."/>
    <echo message="build                - build the junit classes."/>
    <echo message="----------------------------------------------------------------"/>
  </target>

  <fileset id="libs" dir="${lib.dir}">
    <include name="*.jar"/>
  </fileset>

  <path id="beehive.class.path">
    <fileset dir="${os.BEEHIVE_HOME}/wsm/build/jars" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/controls/build/jars" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/wsm/lib" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/wsm/external" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/external/xmlbeans" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/external/junit" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/external/log4j" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/external/servlet" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/external/velocity" includes="*.jar"/>
    <fileset dir="${os.BEEHIVE_HOME}/installed/jsr173" includes="*.jar"/>      
  </path>

  <path id="drt.classpath">
    <pathelement location="${os.JAVA_HOME}/lib/tools.jar"/>
    <pathelement location="${basedir}/classes"/>
    <fileset refid="libs"/>
    <path refid="beehive.class.path"/>
  </path>

  <target name="clean">
    <delete dir="${build.dir}"/>
    <delete dir="${drt.logs}"/>
    <delete dir="${web.inf}"/>
    <delete>
      <fileset dir="${tests.src}" includes="*.class"/>
    </delete>
  </target>

  <target name="dirs">
    <mkdir dir="${build.classes}"/>
    <mkdir dir="${drt.logs}"/>
    <mkdir dir="${web.inf}"/>
  </target>
  <target name="build" depends="dirs">
    <antcall target="build-tests"/>
  </target>    <copy todir="${build.classes}">
      <fileset dir="${tests.src}" 
        includes="org/controlhaus/webservice/google.key"/>
    </copy>
  <target name="build-tests" depends="dirs">
    <!-- APT Task -->
    <taskdef name="apt" 
      classname="org.apache.beehive.controls.runtime.generator.AptTask" 
      onerror="report">
      <classpath>
        <path refid="drt.classpath"/>
      </classpath>
    </taskdef>
    <apt srcdir="${tests.src}"
      destdir="${build.classes}"
      gendir="${build.gen}" 
      classpathref="drt.classpath"
      compileByExtension="true" 
      srcExtensions="*.jcx,*.java,*.jws"
      debug="true"/>
    <copy todir="${web.inf}">
      <fileset dir="${basedir}"
        includes="encodedWSDLs/*.wsdl,encodedWSDLs/*.WSDL"/>
    </copy>
    <copy todir="${web.inf}/classes/schema/src">
      <fileset dir="${basedir}/schemas"
        includes="*.wsdl,*.WSDL"/>
    </copy>
    <copy todir="${build.classes}">
      <fileset dir="${tests.src}" 
        includes="org/controlhaus/webservice/google.key"/>
    </copy>
  </target>

  <target name="nettests">
    <available file="${build.classes}/org/controlhaus/webservice/google.key"
      property="googleKeyAvailable" />    
    <junit failureproperty="networktestsfailed"
      dir="${basedir}"
      printsummary="on"
      tempdir="${build.dir}"
      fork="yes">
      <classpath>
        <pathelement location="${build.classes}"/>
        <path refid="drt.classpath"/>
      </classpath>
      <formatter type="plain"/>
      <test name="org.controlhaus.webservice.GoogleControlTestCase" 
        todir="${drt.logs}"
        if="googleKeyAvailable"
        filtertrace="off"/>
      <batchtest filtertrace="off" todir="${drt.logs}">
        <fileset dir="${tests.src}">
          <include name="**/*TestNet.java"/>
        </fileset>
      </batchtest>
    </junit>
    <fail if="networktestsfailed">One or more ServiceControl network tests failed.</fail>
  </target>

  <target name="run-drt">
    <echo message="** junit logfiles written to ${drt.logs} **"/>
    <junit failureproperty="drtfailed"
      dir="${basedir}"
      printsummary="on"
      tempdir="${build.dir}"
      fork="yes">
      <classpath>
        <pathelement location="${build.classes}"/>
        <path refid="drt.classpath"/>
      </classpath>
      <formatter type="plain"/>
      <batchtest filtertrace="off" todir="${drt.logs}">
        <fileset dir="${tests.src}">
          <include name="**/*Test.java"/>
        </fileset>
      </batchtest>
    </junit>
    <fail if="drtfailed">One or more tests in the ServiceControl DRT failed.</fail>
  </target>
  <target name="drt">
    <echo message="--------------------------------------------------"/>
    <echo message="|         ServiceControl drt starting            |"/>
    <echo message="--------------------------------------------------"/>
    <antcall target="clean"/>
    <antcall target="build-tests"/>
    <antcall target="run-drt"/>
    <echo message="--------------------------------------------------"/>
    <echo message="|         ServiceControl drt ending              |"/>
    <echo message="--------------------------------------------------"/>
  </target>
</project>

