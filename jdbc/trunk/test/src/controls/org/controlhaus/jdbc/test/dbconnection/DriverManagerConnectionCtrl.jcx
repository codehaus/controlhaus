package org.controlhaus.jdbc.test.dbconnection;

import java.sql.SQLException;

import org.controlhaus.jdbc.JdbcControl;

/**
 * Test a simple connection to the database.
 */
@org.apache.beehive.controls.api.bean.ControlExtension
@JdbcControl.ConnectionDriver(databaseDriverClass="org.apache.derby.jdbc.EmbeddedDriver",
                                   databaseURL="jdbc:derby:MyDB;create=true")
@JdbcControl.ConnectionOptions(readOnly=false, resultSetHoldability = JdbcControl.HoldabilityType.DRIVER_DEFAULT,
        typeMappers={
                     @JdbcControl.TypeMapper(UDTName="foo",mapperClass=TestTypeMapper.class),
                     @JdbcControl.TypeMapper(UDTName="bar",mapperClass=TestTypeMapper.class)
                    })
public interface DriverManagerConnectionCtrl extends JdbcControl {

    @SQL(statement = "CREATE TABLE FOO1 (BAR VARCHAR(3))")
    public void createTable() throws SQLException;
}

